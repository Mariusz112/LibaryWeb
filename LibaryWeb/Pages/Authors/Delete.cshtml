@page
@model LibaryWeb.Pages.Authors.DeleteAuthor


<form method="post">
    <input hidden asp-for="Author.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete Author</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Author.Name">Title</label>
            <input asp-for="Author.Name" class="form-control" />
            <span asp-validation-for="Author.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Author.Surname">Surname</label>
            <input asp-for="Author.Surname" class="form-control" />
            <span asp-validation-for="Author.Surname" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Author.Book">Author</label>
            <input asp-for="Author.Book" class="form-control" />
            <span asp-validation-for="Author.Book" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px;">Delete</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px;"> Back to List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}